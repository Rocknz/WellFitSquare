<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#FFFFFFFF"
    android:padding = "5dp">
    <LinearLayout
        android:id="@+id/temp1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:padding = "5dp"
        android:layout_alignParentBottom="true">
		<LinearLayout
	    	android:id="@+id/exercise_sum_day_layout"
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="40"
		    android:background="#FF7FC270"
	        android:orientation="horizontal">
	        
		    <ImageView
		        android:layout_width="0dp"
		        android:layout_weight="2"
		        android:layout_height="fill_parent"
		        android:background="@drawable/calr" />
		    <TextView
		        android:layout_width="0dp"
		        android:layout_height="fill_parent"
		        android:layout_weight="9"
		        android:id = "@+id/exercise_sum_day_text"
		        android:gravity="center"
		        android:textColor="#FF000000"
		        android:text="클릭하여 날짜를 선택해주세요"/>
		    
	    </LinearLayout>
	    <TextView
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"/>
	    <Button
	        android:id = "@+id/exercise_sum_day_choose"
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="19"
	        android:background="#FF6161AA"
	        android:textColor="#FFFFFFFF"
	        android:text="운동 종류 선택"/>
	</LinearLayout>
	
	<ListView 
	    android:id="@+id/exercise_sum_list"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:padding="5dp"
		android:divider="@android:color/transparent"
		android:dividerHeight="10.0sp"
		android:layout_above="@id/temp1"/>

</RelativeLayout>